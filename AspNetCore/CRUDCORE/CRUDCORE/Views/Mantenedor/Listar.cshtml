@model List<ContactoModelcs>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Lista Contacto
    </div>
    <div class="card-body">

        <a asp-action="Guardar" asp-controller="Mantenedor" class="btn btn-warning"> <i class="bi bi-plus-circle"></i> Crear Nuevo</a>
        <hr />
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Telefono</th>
                    <th>Correo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
               @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nombre</td>
                        <td>@item.Telefono</td>
                        <td>@item.Correo</td>
                        <td>
                            <a asp-action="Editar" asp-controller="Mantenedor" asp-route-IdContacto="@item.IdContacto" class="btn btn-primary"> <i class="bi bi-pencil"></i> Editar</a>
                            <a asp-action="Eliminar" asp-controller="Mantenedor" asp-route-IdContacto="@item.IdContacto" class="btn btn-danger"> <i class="bi bi-dash-circle"></i> Eliminar</a>
                          
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>

